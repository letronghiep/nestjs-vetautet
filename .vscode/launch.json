{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
        "args": ["start"],
        "autoAttachChildProcesses": true,
        "restart": true,
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "env": {
          "TS_NODE_PROJECT": "tsconfig.json"
        }
      }
    ]
  }
  